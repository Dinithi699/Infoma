<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Transparent background -->
    <solid android:color="@android:color/transparent"/>

    <!-- Outline stroke -->
    <stroke
        android:width="2dp"
        android:color="#2196F3"/>

    <!-- Rounded corners -->
    <corners android:radius="8dp"/>

    <!-- Padding -->
    <padding
        android:left="16dp"
        android:top="12dp"
        android:right="16dp"
        android:bottom="12dp"/>

</shape>